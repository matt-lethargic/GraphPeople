@using GraphPeople.Models
@model IEnumerable<Person>
@{
    ViewBag.Title = "Index";
}

<h2>People</h2>
<div class="row">
    <div class="col-md-4">
        @Html.ActionLink("Add Person", "Add", null, new { @class ="btn btn-default" })
    </div>
    <div class="col-md-8">
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            @foreach (Person person in Model)
            {
            <tr>
                <td>@person.Id</td>
                <td>@person.Name</td>
            </tr>
            }
        </table>
    </div>
</div>